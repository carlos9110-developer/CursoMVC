@model CursoMVC.Models.ViewModels.ArchivoViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm("Save", "Archivo", FormMethod.Post, 
    new { role = "form",enctype="multipart/form-data", @class = "" }))
{
    <div class="row">
        <div class="col-md-6 col-lg-offset-3">

            <div class="form-group">
                @Html.LabelFor(m => m.Archivo1, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Archivo1, new { @class = "form-control", type = "file", accept = ".png" })
                @Html.ValidationMessageFor(m => m.Archivo1, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Archivo2, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Archivo2, new { @class = "form-control", type = "file", accept = ".png" })
                @Html.ValidationMessageFor(m => m.Archivo2, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Cadena, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Cadena, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Cadena, "", new { @class = "text-danger" })
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">Guardar</button>
            </div>

        </div>
    </div>
}